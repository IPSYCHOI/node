<%-include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<%-include('../includes/nav.ejs') %>
    <main>
        <form class="product-form" action="<%if(e) {%>/admin/edit_product<%}else{%>/admin/add-product<%}%>" method='POST'>
            <div class="form-control">
                <label for="title">Product Name</label>
                <input type="text" name="title" id="title" value="<%if(e) {%><%=product.title%><%}else{%><%}%>">
            </div>
            <div class="form-control">
                <label for="price">Product Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%if(e) {%><%=product.price%><%}else{%><%}%>">
            </div>
            <div class="form-control">
                <label for="Image">Product Image</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%if(e) {%><%=product.imageUrl%><%}else{%><%}%>">
            </div>
            <div class="form-control"></div>
                <label for="des">Product Description</label>
                <input type="text" name="des" id="des" value="<%if(e) {%><%=product.des%><%}else{%><%}%>">
            </div>
            <button type="submit">
                <%if(e) {%>Update Product<%}else{%>Add Product<%}%>
            </button>
            <%if(e) {%><input type="hidden" name="id" value="<%=product.id%>"><%}%>
        </form>
    </main>
    <%-include('../includes/end.ejs') %>