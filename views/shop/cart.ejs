<%-include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
</head>
    
    <%-include('../includes/nav.ejs') %>
    <main>
        
       
        <% if (prods.length > 0) {%>
            <div class="grid">
                <% for(let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">Quantity = <%= product.cartItem.quantity %></h2>
                        </div>
                        <div class="card__content">
                            <p class="product__description"><%= product.des %></p>
                        </div>
                        <div class="card__actions">
                            <form method="POST" action="admin/delete-item">
                                <button type="submit" class="btn">Remove From cart</button>
                                <input value="<%=product.id%>" type="hidden" name="prodId">
                                <input value="<%=product.price%>" type="hidden" name="prodPrice">
                                <input value="<%= product.qty %>" type="hidden" name="totalqty">
                                        
                            </form>
                            
                        </div>
                    </article>
                <%}%>
                
            </div>
            <hr>
            <main class="center">
                <form action="/create_order" method="POST">
                    <button class="btn" type="submit">Order Now !!</button>
                </form>
            </main>
        <% }else{%>
            <h1>My Products</h1>
            <p>List of all the products...</p>
        <%}%>
             
            
        
    </main>
<%-include('../includes/end.ejs') %>